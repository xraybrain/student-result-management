<div class="container row">
  {{>_admin_sidebar}}
  <section class="col-md-9">
    {{>_page_msg}}
    <div class="card mt-2 mx-auto box">
      <h3 class="card-header text-center text-light bg-dark">Newly Registered Accounts</h3>
      {{#if lecturers}}
      <table class="table table-striped table-hover">
        {{#each lecturers}}
          <tr>
            <td>{{firstName}}</td>
             <td>{{lastName}}</td>
             <td><form method="POST" action="/admin/activateaccount/{{_id}}?_method=PUT">
             <input type="hidden" name="_method" value="PUT"/>

             <input type="submit" name="submit" value="Accept" class="btn btn-sm btn-success"/>
             </form> </td>
             <td><form method="POST" action="/admin/rejectactivation/{{_id}}?_method=DELETE">
             <input type="hidden" name="_method" value="DELETE"/>

             <input type="submit" name="submit" value="Reject" class="btn btn-sm btn-danger"/>
             </form> </td>
          </tr>
        {{else}}

        {{/each}}
      </table>
      {{else}}
        <p class="col-md-10 mx-auto text-center text-warning">No unactivated account.</p>

      {{/if}}
    </div>
  </section>
</div>