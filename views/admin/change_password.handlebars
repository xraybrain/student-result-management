<div class="container row">
  {{>_admin_sidebar}}
  <section class="col-md-6 center">
    {{>_admin_msg}}
    <div class="card">
      <h3 class="card-header bg-dark text-light text-center">Change Admin Password</h3>
      <div class="card-body">
        
        <form action="/admin/?_method=PUT" method="POST">
          <input type="hidden" name="_method" value="PUT" />
          <div class="form-group">
            <label class="control-label col-md-5" for="oldPassword">Old Password</label>
            <div class="col-md-8">
              <input type="password" name="oldPassword" id="oldPassword" class="form-control"/>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-5" for="password">New Password</label>
            <div class="col-md-8">
              <input type="password" name="password" id="password" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-9" for="confirmPassword">Confirm New Password</label>
            <div class="col-md-8">
              <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"/>
            </div>
            <!-- This is used by the front end javascript -->
            <div class="col-md-10" id="confirmPasswordErrorBox">
              <p class="alert alert-danger text-small mt-2" id="confirmPasswordError">
                <span class="close icon-small" data-dismiss="alert">&times;</span>
                {{confirmPasswordError}}
              </p>
            </div>
            <!-- ends here -->
          </div>

          <div class="form-group">
            <div class="col-md-8">
              <input type="submit" name="changePassword" value="Change" class="btn btn-dark"/>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>